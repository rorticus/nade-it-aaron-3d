{
	"compilerOptions": {
		"outDir": "./build/",
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "ES5",
		"jsx": "react",
		"allowJs": true,
		"lib": ["es2015", "dom"],
		"moduleResolution": "node",
		"resolveJsonModule": true
	},
	"include": [
		"./src/**/*.ts"
	],
	"exclude": [
		"./node_modules/**/*"
	]
}
